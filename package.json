{
  "name": "mern_starter",
  "version": "1.0.0",
  "description": "Starter app for projects using the MERN stack.",
  "main": "src/index.js",
  "repository": "github:jeanbeanie/mern_starter_app",
  "scripts": {
    "flow": "node_modules/.bin/flow .",
    "build:server": "NODE_ENV='production' webpack --config webpack.config.server.js",
    "build:client": "NODE_ENV='production' webpack --config webpack.config.client.js",
    "dev:server": "rm -rf ./build && NODE_ENV='dev' webpack --config webpack.dev.config.server.js",
    "dev:client": "NODE_ENV='dev' webpack-dev-server --config webpack.dev.config.client.js",
    "start:dev": "rm -rf ./.build && NODE_ENV='dev' npm-run-all --parallel dev:server dev:client",
    "start:production": "NODE_ENV='production' node server/app.js",
    "start": "npm-run-all build:server build:client start:production",
    "test": "BABEL_ENV=test ava --verbose",
    "watch": "BABEL_ENV=test ava --verbose --watch"
  },
  "author": "Jeane",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-register": "^6.26.0",
    "browser-env": "^3.2.5",
    "css-loader": "^0.28.9",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-flow": "^1.0.2",
    "eslint-plugin-ava": "^4.5.1",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-flowtype": "^2.45.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.66.0",
    "imports-loader": "^0.7.1",
    "npm-run-all": "^4.1.2",
    "react-test-renderer": "^16.2.0",
    "start-server-webpack-plugin": "^2.2.1",
    "style-loader": "^0.19.1",
    "stylelint": "^8.4.0",
    "stylelint-config-recommended": "^2.1.0",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "bootstrap": "^3.3.7",
    "express": "^4.16.2",
    "file-loader": "^1.1.6",
    "flow": "^0.2.3",
    "font-awesome": "^4.7.0",
    "mongodb": "^3.0.1",
    "node-sass": "^4.7.2",
    "postcss-loader": "^2.0.10",
    "precss": "^2.0.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^4.0.0-rc.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "sass-loader": "^6.0.6"
  },
  "ava": {
    "files": [
      "test/test.js"
    ],
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ],
    "babel": "inherit"
  }
}
